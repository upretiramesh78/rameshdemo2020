node {
    def mvn = tool (name: 'maven3', type: 'maven') + '/bin/mvn'
    def tomcatIp = '13.234.76.19'
   def tomcatUser = 'ec2-user'
   def stopTomcat = "ssh ${tomcatUser}@${tomcatIp} /opt/tomcat9/bin/shutdown.sh"
   def startTomcat = "ssh ${tomcatUser}@${tomcatIp} /opt/tomcat9/bin/startup.sh"
   def copyWar = "scp -o StrictHostKeyChecking=no target/demo-0.0.1-SNAPSHOT.war ${tomcatUser}@${tomcatIp}:/opt/tomcat9/webapps/"

   stage('SCM Checkout'){
    // Clone repo
	git branch: 'master', 
	credentialsId: 'github', 
	url: 'https://github.com/upretiramesh78/rameshdemo2020/'
      }
   
stage('Build & Compile') {    
   def mvnHome =  tool name: 'maven3', type: 'maven'   
      bat "${mvnHome}/bin/mvn package"
   }
   
   
   
     stage("deploy-dev"){
            steps{
                sshagent(['sshagentaws'])  {
                sh """
                    scp -o StrictHostKeyChecking=no target/demo-0.0.1-SNAPSHOT.war  ec2-user@13.233.80.63:/home/ec2-user/opt/Tomcat9.0/webapps/
                    
                    ssh ec2-user@13.233.80.63 /home/ec2-user/opt/Tomcat9.0/bin/shutdown.sh
                    
                    ssh ec2-user@13.233.80.63 /home/ec2-user/opt/Tomcat9.0/bin/startup.sh
                
                """
            }
            
            }
        }
    }

 

   

   
}
